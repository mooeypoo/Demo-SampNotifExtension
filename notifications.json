{
    "manifest_version": 1,
    "notifications": {
        "welcome": {
            "context": "message",
            "priority": "low",
            "user-locators": [ "event-agent" ],
            "icon": "site",
            "presentation": {
                "title": {
                    "msg": "notification-header-welcome",
                    "params": ["site-name", "event-agent"]
                },
                "links": [
                    {
                        "msg": "notification-welcome-linktext",
                        "link": ""
                    }
                ]
            },
            "preferences": {
                "category": "categoryName",
                "tooltip": "...",
                "delivery-methods": {
                    "email": {
                        "allowed": true,
                        "default": false
                    },
                    "web": {
                        "allowed": true,
                        "default": false
                    }
                }
            }
        },
        "thank-you-edit": {
            "context": "alert",
            "priority": "high",
            "user-locators": [ "event-agent" ],
            "icon": "edit",
            "bundle": {
                "bundle-id": "thank-you-edit",
                "delivery-methods": {
                    "default": {
                        "bundled": true,
                        "interval": 60
                    },
                    "email": {
                        "interval": 120
                    }
                }
            },
            "presentation": {
                "title": {
                    "msg": "echo-category-title-thank-you-edit",
                    "params": [ [ "event-extra", "editCount" ] ]
                }
            }
        },
        "page-linked": {
            "context": "message",
            "priority": "medium",
            "user-locators": [ "article-creator" ],
            "bundle": {
                "delivery-methods": {
                    "default": {
                        "bundled": true,
                        "interval": 60
                    }
                }
            }
        }
    },
    "user-locators": {
        "mention": "MediaWiki\\Extensions\\SampNotifExtension\\Locators::MentionLocator"
    }
}